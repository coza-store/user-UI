<%- include('../includes/begin.ejs') %>
    <link rel="stylesheet" href="/css/user-auth.css" type="text/css">

    </head>

    <body>
        <div id="preloder">
            <div class="loader"></div>
        </div>
        <main class="login-bg">
            <!-- Register Area Start -->
            <form class="register-form-area" action="/register" method="POST">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-6 col-lg-8">
                            <div class="register-form text-center">
                                <!-- Login Heading -->
                                <div class="register-heading">
                                    <span>Sign Up</span>
                                    <p>Create your account to get full access</p>
                                </div>
                                <%if(errorMessage) { %>
                                    <div class="user-message user-message--error" style="margin-top: 10px;">
                                        <%=errorMessage%>
                                    </div>
                                    <% } %>
                                        <!-- Single Input Fields -->
                                        <div class="input-box">
                                            <div class="single-input-fields">
                                                <label>Full name</label>
                                                <input type="text" placeholder="Enter full name" name="name">
                                            </div>
                                            <div class="single-input-fields">
                                                <label>Email Address</label>
                                                <input type="email" placeholder="Enter email address" name="email">
                                            </div>
                                            <div class="single-input-fields">
                                                <label>Password</label>
                                                <input type="password" placeholder="Enter Password" name="password">
                                            </div>
                                            <div class="single-input-fields">
                                                <label>Confirm Password</label>
                                                <input type="password" placeholder="Confirm Password" name="confirmPassword">
                                            </div>
                                        </div>
                                        <!-- form Footer -->
                                        <div class="register-footer">
                                            <p> Already have an account? <a href="/login"> Login</a> here</p>
                                            <button class="submit-btn-user">Sign Up</button>
                                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- Register Area End -->
        </main>
        <%- include('../includes/script.ejs') %>
            <%- include('../includes/end.ejs') %>