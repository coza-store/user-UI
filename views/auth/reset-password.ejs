<%- include('../includes/begin.ejs') %>
    <link rel="stylesheet" href="/css/user-auth.css" type="text/css">

    </head>

    <body>
        <div id="preloder">
            <div class="loader"></div>
        </div>
        <main class="login-bg">
            <!-- Register Area Start -->
            <form class="register-form-area" action="/reset-password" method="POST">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-6 col-lg-8">
                            <div class="register-form text-center">
                                <!-- Login Heading -->
                                <div class="register-heading">
                                    <span>Sign Up</span>
                                    <p>Create your account to get full access</p>
                                </div>
                                <!-- Single Input Fields -->
                                <div class="input-box" style="padding-bottom: 30px;">
                                    <div class="single-input-fields">
                                        <label>New Password</label>
                                        <input type="password" placeholder="Enter Password" name="password">
                                    </div>
                                    <div class="single-input-fields">
                                        <label>Confirm Password</label>
                                        <input type="password" placeholder="Confirm Password" name="confirmPassword">
                                    </div>
                                </div>
                                <!-- form Footer -->
                                <div class="register-footer">
                                    <button class="submit-btn-user">Update Password</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- Register Area End -->
        </main>
        <%- include('../includes/script.ejs') %>
            <%- include('../includes/end.ejs') %>