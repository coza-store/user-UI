<%- include('../includes/begin.ejs') %>
    <link rel="stylesheet" href="/css/setting.css" type="text/css">
    <link rel="stylesheet" href="/css/user-auth.css" type="text/css">
    </head>

    <body>
        <!-- Header -->
        <header>
            <!-- Header desktop -->
            <div class="container-menu-desktop">
                <%- include('../includes/top-bar.ejs',{isAuthenticated:isAuthenticated,user:user}) %>


                    <div class="wrap-menu-desktop">
                        <%- include('../includes/navigation.ejs') %>
                    </div>
            </div>

            <%- include('../includes/head-mobile.ejs',{isAuthenticated:isAuthenticated,user:user}) %>

        </header>
        <%- include('../includes/cart.ejs') %>
            <form class="setting-form" action="/setting" method="POST" enctype="multipart/form-data">
                <div class="wrapper bg-white" style="margin-top: 70px;">
                    <%if(errorMessage) { %>
                        <div class="user-message user-message--error" style="margin-bottom: 40px;">
                            <%=errorMessage%>
                        </div>
                        <% }  %>
                            <h4 class="pb-4 border-bottom">Account settings</h4>
                            <div class="d-flex align-items-start py-3 border-bottom">
                                <%if(user.userImage) { %>
                                    <img src="/<%= user.userImage %>" class="img" alt="">
                                    <% } else { %>
                                        <img src="/images/user/guest-user.jpg" class="img" alt="">
                                        <% }  %>
                                            <div class="pl-sm-4 pl-2" id="img-section"> <b>Profile Photo</b>
                                                <p>Accepted file type .png. Less than 1MB</p>
                                                <input type="file" name="image" id="image" class="btn button border" style="cursor: pointer;">
                                            </div>
                            </div>
                            <div class="py-2">
                                <div class="row py-2">
                                    <div class="col-md-12"> <label for="firstname">Your Name</label>
                                        <input type="text" class="bg-light form-control" name="name" value="<%= user.name %>">
                                    </div>
                                </div>
                                <div class="row py-2">
                                    <div class="col-md-6"> <label for="email">Email Address</label>
                                        <input type="text" class="bg-light form-control" placeholder="example@email.com" name="email" value="<%= user.email %>">
                                    </div>
                                    <div class="col-md-6 pt-md-0 pt-3"> <label for="phone">Phone Number</label>
                                        <input type="tel" class="bg-light form-control" placeholder="(+84)" name="phone">
                                    </div>
                                </div>
                                <div class="row py-2">
                                    <div class="col-md-6">
                                        <!-- <label for="country">City</label> -->
                                        <select name="calc_shipping_provinces" id="provinces" class="bg-light" required="">
                                            <option value="">City</option>
                                         </select>
                                    </div>
                                    <div class="col-md-6 pt-md-0 pt-3" id="lang">
                                        <!-- <label for="language">Language</label> -->
                                        <div class="arrow">
                                            <select name="calc_shipping_district" id="district" class="bg-light" required="">
                                                <option value="">District</option>
                                            </select>
                                        </div>
                                    </div>
                                    <input class="billing_address_1" name="" type="hidden" value="">
                                    <input class="billing_address_2" name="" type="hidden" value="">
                                </div>
                                <div class="row py-2">
                                    <div class="col-md-12"> <label for="email">Address</label>
                                        <input type="text" class="bg-light form-control" name="address">
                                    </div>
                                </div>
                                <div class="py-3 pb-4 border-bottom"> <button class="save-button">Save Changes</button> <button class="btn border button">Cancel</button> </div>
                            </div>
                </div>
            </form>
            <%- include('../includes/footer.ejs') %>
                <%- include('../includes/back-to-top.ejs') %>
                    <%- include('../includes/preview-modal.ejs') %>
                        <%- include('../includes/script.ejs') %>
                            <script src="/js/preview-modal.js"></script>
                            <script src="/js/cart-function.js"></script>
                            <%- include('../includes/end.ejs') %>