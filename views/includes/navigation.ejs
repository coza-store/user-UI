                        <% if(!user.cart.totalQty) { %>
                            data-notify="0"
                            <% } else { %> data-notify="
                                <%= user.cart.totalQty %>"
                                    <% } %>
                                        <% } else { %>data-notify="0"
                                            <% } %>>
                                                <i class="zmdi zmdi-shopping-cart"></i>
