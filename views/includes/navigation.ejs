<nav class="limiter-menu-desktop container">

    <!-- Logo desktop -->
    <a href="/" class="logo">
        <img src="/images/icons/logo-01.png" alt="IMG-LOGO">
    </a>

    <!-- Menu desktop -->
    <div class="menu-desktop">
        <ul class="main-menu">
            <li class="<%= path === '/' ? 'active-menu' : '' %>"><a href="/">Home</a></li>
            <li class="<%= path === '/products' ? 'active-menu' : '' %>"><a href="/products">Product</a></li>
            <li class="<%= path === '/blog' ? 'active-menu' : '' %> label1" data-label1="new"><a href="/blog">Blog</a></li>
