<!-- Topbar -->
<div class="top-bar">
    <div class="content-topbar flex-sb-m h-full container">
        <div class="left-top-bar">
            Free shipping for standard order over $100
        </div>

        <div class="right-top-bar flex-w h-full">
            <a href="/faq" class="flex-c-m trans-04 p-lr-25">Help & FAQs</a>
            <% if(isAuthenticated == true) { %>
                <div class="dropdown">
                    <div class="nav-ava">
                        <%if(user.userImage) { %>
                            <img src="/<%= user.userImage %>" class="img" alt="">
                            <% } else { %>
                                <img src="/images/user/guest-user.jpg" class="img" alt="">
                                <% }  %>
                    </div>
                    <a style="padding-left: 20px;" href="/setting" class="flex-c-m trans-04 p-lr-25">
                        <%=user.name%>
                    </a>
                    <div class="dropdown-content">
                        <a href="/setting" class="flex-c-m trans-04 p-lr-25"><i style="font-size: 15px;" class="fa fa-cog"></i>&emsp;Settings</a>
                        <form action="/logout" method="POST">
                            <button><i style="font-size: 15px;" class="fa fa-sign-out"></i>&emsp;Log out</button>
                        </form>
                    </div>
                </div>
                <% } else { %>
                    <a href="/login" class="flex-c-m trans-04 p-lr-25">My Account</a>
                    <% } %>
                        <a href="#" class="flex-c-m trans-04 p-lr-25">EN</a>
                        <a href="#" class="flex-c-m trans-04 p-lr-25">USD</a>
        </div>
    </div>
</div>